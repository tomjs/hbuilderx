{
  "name": "@tomjs/vite-plugin-hbuilderx",
  "type": "module",
  "version": "1.1.0",
  "description": "为 HBuilderX 开发插件提供 vite 插件，可以使用 vue/react 开发 webview 的视图等",
  "author": {
    "name": "Tom Gao",
    "email": "tom@tomgao.cc"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomjs/hbuilderx.git",
    "directory": "packages/vite"
  },
  "keywords": [
    "vite",
    "plugin",
    "hbuilderx",
    "html",
    "hmr",
    "extension",
    "webview"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./webview": "./dist/webview.js",
    "./client": "./dist/client.iife.js",
    "./types": {
      "types": "./env.d.ts"
    }
  },
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "tsdown --watch",
    "build": "tsdown",
    "lint": "run-s lint:stylelint lint:eslint",
    "lint:stylelint": "stylelint \"examples/**/*.{css,scss,vue}\" --fix",
    "lint:eslint": "eslint --fix",
    "prepublishOnly": "pnpm build"
  },
  "peerDependencies": {
    "vite": ">=5"
  },
  "dependencies": {
    "@tomjs/node": "^2.2.3",
    "execa": "^9.6.1",
    "lodash.merge": "^4.6.2",
    "node-html-parser": "^7.0.1",
    "picocolors": "^1.1.1",
    "tsdown": "~0.18.4"
  },
  "devDependencies": {
    "@tomjs/hbuilderx": "workspace:*",
    "@types/jsdom": "^27.0.0",
    "@types/lodash.merge": "^4.6.9"
  }
}
